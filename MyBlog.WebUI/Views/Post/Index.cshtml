@model MyBlog.DataAccess.ViewModels.PostsViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="row">
        @*<div class="col-md-0">
            @await Component.InvokeAsync("CategoryList")
        </div>*@

        
            <div>
                <button type="button">@TempData["Message"]</button>
            </div>
      
        @if (Model.Posts.Count == 0)
        {
            <span class="alert-danger" style="margin-top:30px;">Bu kategoriye ait herhangi bir gönderi bulunmamaktadır.</span>
        }
        else
        {
            @foreach (var item in Model.Posts)
            {
                <div class="card" style="width: 18rem;">
                    <img src="@item.Picture" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Summary</p>
                        <a asp-controller="Post" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">Devamını okuyun</a>
                    </div>
                </div>
            }
        }


    </div>
</div>

