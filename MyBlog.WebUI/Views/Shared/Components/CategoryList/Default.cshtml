

@model MyBlog.DataAccess.ViewModels.CategoriesViewModel

<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        <span class="@css">
            <a asp-controller="Post" asp-action="Index" asp-route-categoryId="@item.Id">@item.CategoryName</a>
        </span>
    }
</div>