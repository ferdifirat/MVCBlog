@model MyBlog.DataAccess.ViewModels.PostsViewModel
@{
    ViewData["Title"] = "Default";
}

<div class="container">
    <a class="btn btn-primary" asp-action="Add" asp-controller="Post">Ekle</a>
    <div class="row">

        @foreach (var item in Model.Posts)
        {
            <div class="card" style="width: 18rem;">
                <img src="@item.Picture" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Summary</p>
                    <a asp-controller="Post" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">Devamını oku</a>

                    <a class="btn btn-primary" asp-action="Update" asp-controller="Post" asp-route-postId="@item.Id">Güncelle</a>
                </div>
            </div>
        }
    </div>
</div>