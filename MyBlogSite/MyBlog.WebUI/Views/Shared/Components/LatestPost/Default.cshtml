@model MyBlog.DataAccess.ViewModels.PostsViewModel
@{
    ViewData["Title"] = "Default";
    int count = 0;
}

@foreach (var item in Model.Posts)
{
    if (count % 2 == 0)
    {
        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">@item.Title</h2>
                <p class="lead">@item.Summary</p>
                <p><a class="btn btn-secondary" asp-controller="Post" asp-action="Detail" asp-route-id="@item.Id" role="button">Devamı</a></p>
            </div>
            <div class="col-md-5">
                <img class="featurette-image img-fluid mx-auto" style="width: 500px; height: 500px;" src="@item.Picture" data-holder-rendered="true">
            </div>

        </div>
    }
    else
    {
        <div class="row featurette">
            <div class="col-md-5">
                <img class="featurette-image img-fluid mx-auto" style="width: 500px; height: 500px;" src="@item.Picture" data-holder-rendered="true">
            </div>
            <div class="col-md-7">
                <h2 class="featurette-heading">@item.Title</h2>
                <p class="lead">@item.Summary</p>
                <p><a class="btn btn-secondary" asp-controller="Post" asp-action="Detail" asp-route-id="@item.Id" role="button">Devamı</a></p>

            </div>
        </div>
    }
    count++;
}



